#!/bin/sh
source $HOME/.colorize/current/colors.sh
cachedir=${XDG_CACHE_HOME:-"$HOME/.cache"}
if [ -d "$cachedir" ]; then
	cache=$cachedir/dmenu_run
else
	cache=$HOME/.dmenu_cache # if no xdg dir, fall back to dotfile in ~
fi
(
	IFS=:
	if stest -dqr -n "$cache" $PATH; then
		stest -flx $PATH | sort -u | tee "$cache" | dmenu2 -p "Run >" -dim 0.4 -nb "#404552" -nf "#b3bdcb" -sb "#5294e2" -sf "#ffffff" "$@"
	else
		dmenu2 -p "Run >" -dim 0.4 -nb "#404552" -nf "#b3bdcb" -sb "#5294e2" -sf "#ffffff" "$@" < "$cache"
	fi
) | ${SHELL:-"/bin/sh"} &
