#!/bin/sh
cachedir=${XDG_CACHE_HOME:-"$HOME/.cache"}
if [ -d "$cachedir" ]; then
	cache=$cachedir/dmenu_run
else
	cache=$HOME/.dmenu_cache # if no xdg dir, fall back to dotfile in ~
fi
(
	IFS=:
	if stest -dqr -n "$cache" $PATH; then
		stest -flx $PATH | sort -u | tee "$cache" | dmenu2 -p "Run >" -dim 0.4 -nb "#333333" -nf "#CCCCCC" -sb "#CC9966" -sf "#333333" "$@"
	else
		dmenu2 -p "Run >" -dim 0.4 -nb "#333333" -nf "#CCCCCC" -sb "#CC9966" -sf "#333333" "$@" < "$cache"
	fi
) | ${SHELL:-"/bin/sh"} &
